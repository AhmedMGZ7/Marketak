@model IEnumerable<Marketak.Models.Ads>

@{
    ViewBag.Title = "Ads";
}

<h2>Ads</h2>

<p>
    @Html.ActionLink("Add new AD", "AddAds")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.paidPerMonth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
